<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zihuatanejo.glidetest">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="com.zihuatanejo.glidetest.SimpleGlideModule"
                android:value="GlideModule"/>
        <!--  <meta-data
                  android:name="com.zihuatanejo.glidetest.UnsafeOkHttpGlideModule"
                  android:value="GlideModule"/>-->
       <!-- <meta-data
                android:name="com.zihuatanejo.glidetest.CustomCachingGlideModule"
                android:value="GlideModule"/>-->

        <meta-data
                android:name="com.zihuatanejo.glidetest.CustomImageSizeGlideModule"
                android:value="GlideModule"/>


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ImageListActivity"/>
        <activity android:name=".NotificationTargetActivity"/>
    </application>

</manifest>