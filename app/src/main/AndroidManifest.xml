<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.nelson.glidetest">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <meta-data
      android:name="com.nelson.glidetest.SimpleGlideModule"
      android:value="GlideModule"/>
    <!--  <meta-data
              android:name="com.zihuatanejo.glidetest.UnsafeOkHttpGlideModule"
              android:value="GlideModule"/>-->
    <!-- <meta-data
             android:name="com.zihuatanejo.glidetest.CustomCachingGlideModule"
             android:value="GlideModule"/>-->

    <meta-data
      android:name="com.nelson.glidetest.CustomImageSizeGlideModule"
      android:value="GlideModule"/>

    <meta-data
      android:name="com.nelson.glidetest.okhttp.OkHttpGlideModule"
      android:value="GlideModule"/>


    <activity android:name="com.nelson.glidetest.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name="com.nelson.glidetest.ImageListActivity"/>
    <activity android:name="com.nelson.glidetest.NotificationTargetActivity"/>
    <activity android:name="com.nelson.glidetest.LoadProgressActivity"/>
  </application>

</manifest>